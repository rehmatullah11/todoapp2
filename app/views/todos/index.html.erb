<h1>Index Todo Page</h1>

<p> <%= link_to "Create Todo", new_todo_path %> </p>
<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |f| %>
    <tr>
      <td><%= f.name %></td>
      <td><%= f.description %></td>
      <td> <%= link_to "Edit", edit_todo_path(f) %> </td>
      <td> <%= link_to "Show", todo_path(f) %> </td>
      <td> <%= link_to 'Delete', todo_path(f), data: { "turbo-method": :delete , turbo_confirm: 'Are you sure?'  } %> </td>
      
    </tr>
  <% end %>
</table>