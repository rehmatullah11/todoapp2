<% if @todo.errors.any? %>
  <h4>Error prevented todo from being saved</h4>
<ul>
  <% @todo.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>



<%= form_for @todo do |f| %>
<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>

<p>
<%= f.label :description %><br>
<%= f.text_area :description %>
</p>

<p><%= f.submit %></p>
<% end %>

<%= link_to "Back to Index" ,todos_path %> 